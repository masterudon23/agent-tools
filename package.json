{
  "name": "@agent-tools/root",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "turbo": "turbo --root-turbo-json .config/turbo.jsonc",
    "build": "bun run turbo run build --filter convex-vite-plugin --filter oxlint-plugin-convex --filter //",
    "clean": "bun run turbo run clean && rm -rf .turbo node_modules",
    "dev": "bun run turbo watch build test --filter convex-vite-plugin --filter oxlint-plugin-convex --filter //",
    "fmt": "oxfmt -c .config/.oxfmtrc.json",
    "lint": "oxlint --type-aware --type-check --deny-warnings --report-unused-disable-directives",
    "qa": "bun run lint && bun run fmt --check",
    "test": "vitest --silent=passed-only",
    "test:run": "vitest run --silent=passed-only"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.2",
    "@typescript/native-preview": "7.0.0-dev.20260120.1",
    "oxfmt": "0.26.0",
    "oxlint": "1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "turbo": "2.7.5",
    "vitest": "4.0.17"
  },
  "engines": {
    "bun": "^1.3.0",
    "node": "^24.0.0"
  },
  "packageManager": "bun@1.3.1"
}
